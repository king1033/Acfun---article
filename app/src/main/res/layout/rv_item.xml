<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item"
    android:background="?attr/rowBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/tv_item_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text="@string/it_from"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_username"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:layout_toRightOf="@+id/tv_item_from"
            android:layout_toEndOf="@+id/tv_item_from" />
        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_title"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_below="@+id/tv_item_from"
            android:paddingLeft="6dp"
            android:text="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_description"
            android:textColor="@color/colorFontGray"
            android:textSize="12sp"
            android:layout_below="@+id/tv_item_title"
            android:paddingTop="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_comments"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_item_cm"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_below="@+id/tv_item_comments"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:text="@string/it_comments"/>
    </RelativeLayout>
