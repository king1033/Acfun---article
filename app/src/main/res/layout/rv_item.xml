<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="?attr/rowBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/tv_item_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/it_from"
            android:layout_alignBottom="@+id/tv_item_time"
            android:layout_toRightOf="@+id/tv_item_time"
            android:layout_toEndOf="@+id/tv_item_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_username"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:paddingTop="3dp"
            android:text="user"
            android:layout_alignTop="@+id/tv_item_from"
            android:layout_toRightOf="@+id/tv_item_from"
            android:layout_toEndOf="@+id/tv_item_from" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_time"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textSize="10sp"
            android:text="2016-5-20"
            android:layout_above="@+id/tv_item_description"
            android:layout_toRightOf="@+id/tv_item_cm"
            android:layout_toEndOf="@+id/tv_item_cm" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/favorite"
            android:id="@+id/imageView2"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="1dp"
            android:layout_above="@+id/tv_item_description"
            android:layout_toRightOf="@+id/tv_item_username"
            android:layout_toEndOf="@+id/tv_item_username" />

        <TextView
            android:id="@+id/tv_item_stows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:textColor="@color/colorRed"
            android:textSize="10sp"
            android:text="10"
            android:layout_above="@+id/tv_item_description"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/viewer"
            android:id="@+id/imageView3"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="1dp"
            android:layout_above="@+id/tv_item_description"
            android:layout_toRightOf="@+id/tv_item_stows"
            android:layout_toEndOf="@+id/tv_item_stows" />

        <TextView
            android:id="@+id/tv_item_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:textColor="@color/colorPurple"
            android:textSize="10sp"
            android:text="10"
            android:layout_above="@+id/tv_item_description"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_title"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:paddingTop="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="50dp"
            android:text="text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_item_comments" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_description"
            android:textColor="@color/colorFontGray"
            android:textSize="12sp"
            android:text="description"
            android:paddingTop="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_item_cm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:id="@+id/tv_item_comments"
            android:gravity="center"

            android:textStyle="bold"
            android:textSize="21sp"
            android:text="111"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_item_cm"
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:textSize="12sp"
            android:text="@string/it_comments"
            android:layout_below="@+id/tv_item_comments"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
